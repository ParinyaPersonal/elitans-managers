<div class="flex">
    <div class="flex-wrap md:w-3/12 md:block md:relative hidden fixed w-full z-10 top-0 left-0" id="sidebar">
        <div class="sticky top-0 divide-y border-y border-s bg-zinc-100 border-zinc-300 divide-zinc-300 md:h-auto h-screen">
            <div class="px-3 py-2 text-zinc-700 bg-white">
                <img class="float-end md:hidden" id="toggle-in" width="24" height="24" src="https://img.icons8.com/sf-ultralight-filled/25/x.png" alt="x" />
                <p class="w-full">Icon Pack</p>
            </div>
            <img src="https://www.lavalamp.com/wp-content/uploads/2016/07/placeholder-1-1.png" class="w-full" id="view-icon">
            <p class="text-zinc-700 px-3 py-2 bg-white w-full">Resources Pack</p>
            <button onclick="location.href = '/resource/create'" class="text-zinc-400 px-3 py-2 w-full transition duration-200 ease select-none bg-zinc-50 hover:bg-zinc-200 focus:outline-none text-start">Create Resource</button>
            <button onclick="location.href = '/resource/manage'" class="text-zinc-400 px-3 py-2 w-full transition duration-200 ease select-none bg-zinc-50 hover:bg-zinc-200 focus:outline-none text-start">Manage Resource</button>
            <p class="text-zinc-700 px-3 py-2 bg-white w-full">Behavior Pack</p>
            <button onclick="location.href = '/behavior/create'" class="text-zinc-400 px-3 py-2 w-full transition duration-200 ease select-none bg-zinc-50 hover:bg-zinc-200 focus:outline-none text-start">Create Behavior</button>
            <button onclick="location.href = '/behavior/manage'" class="text-zinc-400 px-3 py-2 w-full transition duration-200 ease select-none bg-zinc-50 hover:bg-zinc-200 focus:outline-none text-start">Manage Behavior</button>
            <p class="text-zinc-700 px-3 py-2 bg-white w-full">Other</p>
            <button class="text-zinc-400 px-3 py-2 w-full transition duration-200 ease select-none bg-zinc-50 hover:bg-zinc-200 focus:outline-none text-start" id="logout">Logout</button>
        </div>
    </div>
    <div class="md:w-9/12 w-100 border border-zinc-300 divide-y divide-zinc-300 bg-white" id="content">
        <p class="text-zinc-700 px-3 py-2 w-full text-center">
            <button class="text-zinc-500 hover:text-zinc-600 float-start hover:bg-zinc-200 px-1 md:hidden" id="toggle-out">⁝⁝⁝</button>
            <%= title %>
        </p>
        <% if (path=="/resource/create" ) { %>
        <%- include('./resource/create.ejs') %>
        <% } %>
        <% if (path=="/resource/manage") { %>
        <%- include('./resource/manage.ejs') %>
        <% } %>
        <% if (path=="/behavior/create") { %>
        <%- include('./behavior/create.ejs') %>
        <% } %>
        <% if (path=="/behavior/manage" || path=="/behavior/manage/obfuscate" || path=="/behavior/manage/typescript") { %>
        <%- include('./behavior/manage.ejs') %>
        <% } %>
    </div>
</div>
<script>
    structure()
</script>